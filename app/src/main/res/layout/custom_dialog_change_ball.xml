<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:adjustViewBounds="true">

    <ImageView
        android:id="@+id/ball_selection_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ball_selection_top_standard"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/ball_selection_window_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_small">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ball_standard"
                    android:layout_width="0dp"
                    android:layout_weight="34"
                    android:layout_height="wrap_content"
                    android:src="@drawable/button_ball_standard_selector"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:adjustViewBounds="true"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ball_bronze"
                    android:layout_width="0dp"
                    android:layout_weight="34"
                    android:layout_height="wrap_content"
                    android:src="@drawable/button_ball_bronze_selector"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:adjustViewBounds="true"
                    android:clickable="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_small">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ball_silver"
                    android:layout_width="0dp"
                    android:layout_weight="34"
                    android:layout_height="wrap_content"
                    android:src="@drawable/button_ball_silver_selector"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:adjustViewBounds="true"
                    android:clickable="false"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ball_gold"
                    android:layout_width="0dp"
                    android:layout_weight="34"
                    android:layout_height="wrap_content"
                    android:src="@drawable/button_ball_gold_selector"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:adjustViewBounds="true"
                    android:clickable="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_small">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ball_titanium"
                    android:layout_width="0dp"
                    android:layout_weight="34"
                    android:layout_height="wrap_content"
                    android:src="@drawable/button_ball_titanium_selector"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:adjustViewBounds="true"
                    android:clickable="false"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ball_diamond"
                    android:layout_width="0dp"
                    android:layout_weight="34"
                    android:layout_height="wrap_content"
                    android:src="@drawable/button_ball_diamond_selector"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:adjustViewBounds="true"
                    android:clickable="false" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ball_selection_bottom"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_weight="42"
            android:layout_height="wrap_content"
            android:src="@drawable/button_back_selector"
            android:scaleType="fitXY"
            android:background="@null"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/padding_small"/>

    </LinearLayout>

</LinearLayout>